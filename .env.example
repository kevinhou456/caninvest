# 应用配置
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# 数据库配置
DATABASE_URL=sqlite:///family_investment.db
# 生产环境使用PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/canadian_investment

# 自动初始化配置
# 演示数据类型: simple(简单) 或 full(完整示例数据)
DEMO_DATA_TYPE=simple
# 是否在启动时强制检查数据库
AUTO_INIT_DB=true

# 股票数据API配置 (可选)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
TWELVE_DATA_API_KEY=your-twelve-data-api-key

# 邮件配置 (可选，用于通知)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# 应用设置
TIMEZONE=America/Toronto
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=CAD

# 调试模式
DEBUG=True

# 日志级别
LOG_LEVEL=INFO

# 服务器配置
HOST=0.0.0.0
PORT=5000